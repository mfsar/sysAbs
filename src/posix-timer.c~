#include <system/system.h>
#include <system/task.h>

#include "timer.h"

bool timer_init(timer_t *t, task_routine_t callback)
{
	
	task_create((task_t)t, (task_routine_t)callback, NULL, NULL, 0, 0);

	return (true);
}

